FROM node:20-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./
COPY vite.config.js ./

# Install dependencies
RUN npm install

# Set API target for Docker environment
ENV VITE_API_TARGET=http://host.docker.internal:5000

# Expose port
EXPOSE 3000

# Start dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]