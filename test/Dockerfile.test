FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY test/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir pytest-html psycopg2-binary

# Copy application and test files
COPY app.py adsb_api.py
COPY test/test_adsb_api.py .
COPY test/conftest.py .
COPY test/pytest.ini .

# Create test results directory
RUN mkdir -p /app/test-results

# Default command
CMD ["pytest", "test_adsb_api.py", "-v", "--tb=short"]
