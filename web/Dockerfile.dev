FROM node:20-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./
COPY vite.config.js ./

# Install dependencies
RUN npm install

# Set API target for Docker environment (connects to api service on same network)
ENV VITE_API_TARGET=http://api:8000

# Expose port
EXPOSE 3000

# Start dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]